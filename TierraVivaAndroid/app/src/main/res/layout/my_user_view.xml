<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_view_profile"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserViewActivity">
    <TextView
        android:id="@+id/tierraVivaTitle"
        android:layout_width="238dp"
        android:layout_height="51dp"
        android:foregroundTint="#1C9708"
        android:text="TIERRA VIVA"
        android:textColor="#1C9708"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_profile_default_image" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginEnd="268dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221"
        app:srcCompat="@drawable/circle2" />

    <ImageView
        android:id="@+id/circle3UserWindow"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="290dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534"
        app:srcCompat="@drawable/circle3" />

    <ImageView
        android:id="@+id/circle4UserWindow"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginEnd="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/circle3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/mi_perfil_titile"
        android:textColor="#474747"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="110dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageidPerson"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="317dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailIcon"
        app:layout_constraintVertical_bias="0.698"
        app:srcCompat="@drawable/credit_card_01" />

    <TextView
        android:id="@+id/correoPersonaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_persona"
        android:textColor="@color/font"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="661dp" />

    <TextView
        android:id="@+id/textoTelefonoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefono_persona"
        android:textColor="@color/font"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:id="@+id/textoIdPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_persona"
        android:textColor="@color/font"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="561dp" />

    <ImageView
        android:id="@+id/emailIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/mail_icon"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="653dp" />

    <ImageView
        android:id="@+id/phoneIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="440dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_persona"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/ciudadUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ciudadUsuario"
        android:textColor="@color/font"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="343dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_hamburger"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>